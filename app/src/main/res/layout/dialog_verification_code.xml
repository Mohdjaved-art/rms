<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white"
    android:layout_gravity="center"
    android:minHeight="500dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please check your email"
        android:textSize="24sp"
       android:textColor="@color/black"
       android:gravity="center"
       android:textStyle="bold" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We've sent a code to contact@curfcode.com"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/code_input_1"
            android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="1"
        android:padding="16dp"
        android:textSize="18sp"
        android:background="@android:drawable/edit_text"
        android:layout_margin="8dp"
            android:autofillHints="" />

        <EditText
            android:id="@+id/code_input_2"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:padding="16dp"
            android:textSize="18sp"
            android:background="@android:drawable/edit_text"
            android:layout_margin="8dp"
            android:autofillHints="" />

        <EditText
            android:id="@+id/code_input_3"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:padding="16dp"
            android:textSize="18sp"
            android:background="@android:drawable/edit_text"
            android:layout_margin="8dp"
            android:autofillHints="" />

        <EditText
            android:id="@+id/code_input_4"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:padding="16dp"
            android:textSize="18sp"
            android:background="@android:drawable/edit_text"
            android:layout_margin="8dp" />

        <EditText
            android:id="@+id/code_input_5"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:padding="16dp"
            android:textSize="18sp"
            android:background="@android:drawable/edit_text"
            android:layout_margin="8dp"
            android:autofillHints="" />

        <EditText
            android:id="@+id/code_input_6"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:padding="16dp"
            android:textSize="18sp"
            android:background="@android:drawable/edit_text"
            android:layout_margin="8dp"
            android:autofillHints="" />

    </LinearLayout>

    <TextView
        android:id="@+id/resend_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Didn't get the code? Click to resend."
        android:textColor="@color/customRed"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Cancel"
            android:backgroundTint="@color/customRed"
            android:layout_marginEnd="16dp"
            android:textSize="16sp"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/verify_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Verify"
            android:backgroundTint="@color/yellow"
            android:textSize="16sp"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>
</LinearLayout>
