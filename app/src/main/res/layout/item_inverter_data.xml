<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="32dp"
    >

    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:background="@drawable/table_border"
            android:layout_height="wrap_content"
            android:stretchColumns="*">


            <TableRow  android:padding="5dp" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/table_row_item"
                    android:id="@+id/date"
                    android:text="1"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/table_row_item"
                    android:id="@+id/time"
                    android:text="Ninja 1"
                    android:textSize="20sp"
                   />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/table_row_item"
                    android:id="@+id/ipvolt"
                    android:text="AI"
                    android:textSize="20sp"
                   />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/table_row_item"
                    android:id="@+id/op_volt"
                    android:text="38"
                    android:textSize="20sp"
                   />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/table_row_item"
                    android:id="@+id/batry_volt"
                    android:text="S.No."
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/table_row_item"
                    android:id="@+id/inv_cc"
                    android:text="100"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/table_row_item"
                    android:id="@+id/inv_load"
                    android:text="Subjects"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/table_row_item"
                    android:id="@+id/inv_scc"
                    android:text="Marks (50)"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/table_row_item"
                    android:id="@+id/inv_solarkwh"
                    android:text="1"
                    android:textSize="20sp"
                   />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/table_row_item"
                    android:id="@+id/onoff"
                    android:text="Ninja 1"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/table_row_item"
                    android:id="@+id/inv_chargingmode"
                    android:text="AI"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/table_row_item"
                    android:id="@+id/savingLevel"
                    android:text="38"
                    android:textSize="20sp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/table_row_item"
                    android:id="@+id/mode"
                    android:text="S.No."
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/table_row_item"
                    android:id="@+id/alerts"
                    android:text="Name"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/table_row_item"
                    android:id="@+id/inv_displaytime"
                    android:text="Subjects"
                    android:textSize="20sp"/>
            </TableRow>
        </TableLayout>
    </HorizontalScrollView>
</ScrollView>
